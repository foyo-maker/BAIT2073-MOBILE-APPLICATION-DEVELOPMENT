<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_layout"
    android:layout_width="match_parent"
    android:layout_height="127dp"


    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/border_black_bottom"


        android:orientation="horizontal">




        <ImageView
            android:id="@+id/customer_image"
            app:srcCompat="@drawable/img_person_real"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:shapeAppearanceOverlay="@style/Circular" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="0dp"
            android:layout_weight="5.0"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tv_customerID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="20dp"

                android:fontFamily="@font/poppins_bold"
                android:text="#C0001"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tee Fo Yo"
                android:textColor="@color/gray"
                android:textSize="@dimen/titleSubFont" />

            <TextView
                android:id="@+id/tv_customerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:text="Foyotee@gmail.com"
                android:textColor="@color/gray"
                android:textSize="@dimen/titleSubFont" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.0"
            android:layout_marginTop="40px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cust_detail_btn"
                    android:layout_width="60dp"
                    android:layout_height="40dp"


                    android:layout_alignParentRight="true"

                    android:layout_marginTop="30dp"


                    android:layout_marginEnd="30dp"
                    android:src="@drawable/ic_next_highlight" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>